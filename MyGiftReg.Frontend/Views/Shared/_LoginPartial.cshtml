@using Microsoft.AspNetCore.Authentication
@using Microsoft.AspNetCore.Authorization

@{
    var authenticateResult = await Context.AuthenticateAsync();
    var isAuthenticated = authenticateResult.Succeeded;
    var userName = string.Empty;
    var userEmail = string.Empty;

    if (isAuthenticated)
    {
        userName = User.Identity?.Name ?? "User";
        userEmail = User.FindFirst("preferred_username")?.Value ?? 
                   User.FindFirst(System.Security.Claims.ClaimTypes.Email)?.Value ?? 
                   "user@example.com";
    }
}

@if (isAuthenticated)
{
    <ul class="navbar-nav">
        <li class="nav-item">
            <span class="nav-link text-dark">Hello @userName!</span>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="MicrosoftIdentity" asp-controller="Account" asp-action="SignOut">
                <button type="submit" class="nav-link btn btn-link text-dark">Sign out</button>
            </form>
        </li>
    </ul>
}
else
{
    <ul class="navbar-nav">
        <li class="nav-item">
            <form class="form-inline" asp-area="MicrosoftIdentity" asp-controller="Account" asp-action="SignIn">
                <button type="submit" class="nav-link btn btn-link text-dark">Sign in</button>
            </form>
        </li>
    </ul>
}
