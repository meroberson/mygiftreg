@model MyGiftReg.Backend.Models.GiftList

@{
    ViewData["Title"] = "Edit Gift List";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <!-- Breadcrumb -->
            <nav aria-label="breadcrumb" class="mb-4">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Events")">Events</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Details", "Events", new { eventName = ViewBag.EventName })">@ViewBag.EventName</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Edit Gift List</li>
                </ol>
            </nav>

            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger" role="alert">
                    <i class="fas fa-exclamation-triangle"></i> @ViewBag.ErrorMessage
                </div>
            }

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success" role="alert">
                    <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
                </div>
            }

            <div class="row">
                <!-- Gift List Details -->
                <div class="col-md-6">
                    <div class="card shadow">
                        <div class="card-header">
                            <h3 class="card-title mb-0">
                                <i class="fas fa-edit"></i> Edit Gift List
                            </h3>
                        </div>
                        <div class="card-body">
                            <form method="post" asp-action="Edit" asp-route-eventName="@ViewBag.EventName" asp-route-giftListId="@ViewBag.GiftListId">
                                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                                
                                <div class="mb-3">
                                    <label asp-for="Name" class="form-label"></label>
                                    <input asp-for="Name" class="form-control" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Owner" class="form-label"></label>
                                    <input asp-for="Owner" class="form-control" readonly />
                                    <small class="text-muted">List owner cannot be changed.</small>
                                </div>

                                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                    <a href="@Url.Action("Details", "Events", new { eventName = ViewBag.EventName })" class="btn btn-secondary me-md-2">
                                        <i class="fas fa-arrow-left"></i> Back to Event
                                    </a>
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-save"></i> Save Changes
                                    </button>
                                </div>
                            </form>

                            <hr />

                            <div class="d-grid">
                                <form method="post" asp-action="Delete" asp-route-eventName="@ViewBag.EventName" asp-route-giftListId="@ViewBag.GiftListId" 
                                      onsubmit="return confirm('Are you sure you want to delete this gift list? This action cannot be undone.');">
                                    <button type="submit" class="btn btn-danger">
                                        <i class="fas fa-trash"></i> Delete Gift List
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Gift Items -->
                <div class="col-md-6">
                    <div class="card shadow">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h3 class="card-title mb-0">
                                <i class="fas fa-gift"></i> Gift Items
                            </h3>
                            <a href="@Url.Action("Edit", "GiftItems", new { eventName = ViewBag.EventName, giftListId = ViewBag.GiftListId })" 
                               class="btn btn-success btn-sm">
                                <i class="fas fa-plus"></i> Add Item
                            </a>
                        </div>
                        <div class="card-body">
                            @if (ViewBag.GiftItems != null && ((IEnumerable<MyGiftReg.Backend.Models.GiftItem>)ViewBag.GiftItems).Any())
                            {
                                <div class="list-group">
                                    @foreach (var item in (IEnumerable<MyGiftReg.Backend.Models.GiftItem>)ViewBag.GiftItems)
                                    {
                                        <div class="list-group-item d-flex justify-content-between align-items-center">
                                            <div class="flex-grow-1">
                                                <h6 class="mb-1">@item.Name</h6>
                                                @if (!string.IsNullOrEmpty(item.Description))
                                                {
                                                    <p class="mb-1 text-muted">@item.Description</p>
                                                }
                                                @if (!string.IsNullOrEmpty(item.Url))
                                                {
                                                    <small>
                                                        <a href="@item.Url" target="_blank" class="text-decoration-none">
                                                            <i class="fas fa-external-link-alt"></i> View Item
                                                        </a>
                                                    </small>
                                                }
                                            </div>
                                            <div class="btn-group" role="group">
                                                <a href="@Url.Action("Edit", "GiftItems", new { 
                                                    eventName = ViewBag.EventName, 
                                                    giftListId = ViewBag.GiftListId, 
                                                    itemId = item.Id 
                                                })" 
                                                   class="btn btn-outline-primary btn-sm">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                            else
                            {
                                <div class="text-center text-muted py-4">
                                    <i class="fas fa-gift fa-3x mb-3"></i>
                                    <p>No gift items yet.</p>
                                    <a href="@Url.Action("Edit", "GiftItems", new { eventName = ViewBag.EventName, giftListId = ViewBag.GiftListId })" 
                                       class="btn btn-success">
                                        <i class="fas fa-plus"></i> Add Your First Item
                                    </a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Add any JavaScript for dynamic interactions
        $(document).ready(function() {
            // Initialize tooltips if needed
            $('[data-bs-toggle="tooltip"]').tooltip();
        });
    </script>
}
