@model MyGiftReg.Backend.Models.GiftList

@{
    ViewData["Title"] = "Reserve Gift Items";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <!-- Breadcrumb -->
            <nav aria-label="breadcrumb" class="mb-4">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Events")">Events</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Details", "Events", new { eventName = ViewBag.EventName })">@ViewBag.EventName</a></li>
                    <li class="breadcrumb-item active" aria-current="page">@Model.Name - Reserve Items</li>
                </ol>
            </nav>

            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger" role="alert">
                    <i class="fas fa-exclamation-triangle"></i> @ViewBag.ErrorMessage
                </div>
            }

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success" role="alert">
                    <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
                </div>
            }

            <!-- Gift List Header -->
            <div class="row mb-4">
                <div class="col-12">
                    <div class="card shadow">
                        <div class="card-header">
                            <h3 class="card-title mb-0">
                                <i class="fas fa-gift"></i> @Model.Name
                            </h3>
                            <small class="text-muted">Owned by @Model.OwnerDisplayName</small>
                        </div>
                        <div class="card-body">
                            <p class="mb-0">Browse and reserve gift items from this list. Items that are already reserved will show the current reserver.</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Gift Items for Reservation -->
            <div class="row">
                <div class="col-12">
                    <div class="card shadow">
                        <div class="card-header">
                            <h4 class="card-title mb-0">
                                <i class="fas fa-list"></i> Available Gift Items
                            </h4>
                        </div>
                        <div class="card-body">
                            @if (ViewBag.GiftItems != null && ((IEnumerable<MyGiftReg.Backend.Models.GiftItem>)ViewBag.GiftItems).Any())
                            {
                                <div class="row">
                                    @foreach (var item in (IEnumerable<MyGiftReg.Backend.Models.GiftItem>)ViewBag.GiftItems)
                                    {
                                        <div class="col-md-6 col-lg-4 mb-3">
                                            <div class="card h-100">
                                                <div class="card-body">
                                                    <h6 class="card-title">@item.Name</h6>
                                                    
                                                    @if (!string.IsNullOrEmpty(item.Description))
                                                    {
                                                        <p class="card-text text-muted small">@item.Description</p>
                                                    }
                                                    
                                                    @if (!string.IsNullOrEmpty(item.Url))
                                                    {
                                                        <div class="mb-2">
                                                            <a href="@item.Url" target="_blank" class="btn btn-outline-info btn-sm">
                                                                <i class="fas fa-external-link-alt"></i> View Item
                                                            </a>
                                                        </div>
                                                    }
                                                    
                                                    <!-- Reservation Status -->
                                                    @if (!string.IsNullOrEmpty(item.ReservedBy))
                                                    {
                                                        <div class="alert alert-warning mb-2">
                                                            <small>
                                                                @if (item.ReservedBy == ViewBag.CurrentUserId)
                                                                {
                                                                    <span><i class="fas fa-check-circle"></i> Reserved by you!</span>
                                                                }
                                                                else
                                                                {
                                                                    <span><i class="fas fa-lock"></i> Reserved by @item.ReservedByDisplayName</span>
                                                                }
                                                            </small>
                                                        </div>
                                                        <button class="btn btn-warning btn-sm" disabled>
                                                            <i class="fas fa-ban"></i> Already Reserved
                                                        </button>
                                                    }
                                                    else
                                                    {
                                                        <div class="alert alert-success mb-2">
                                                            <small>
                                                                <i class="fas fa-check-circle"></i> Available
                                                            </small>
                                                        </div>
                                                        <a href="@Url.Action("Index", "GiftItems", new { 
                                                            eventName = ViewBag.EventName, 
                                                            giftListId = ViewBag.GiftListId, 
                                                            view = "reserve", 
                                                            id = item.Id 
                                                        })" 
                                                           class="btn btn-success btn-sm">
                                                            <i class="fas fa-heart"></i> Reserve Item
                                                        </a>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                            else
                            {
                                <div class="text-center text-muted py-4">
                                    <i class="fas fa-gift fa-3x mb-3"></i>
                                    <p>No gift items available to reserve.</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="row mt-4">
                <div class="col-12">
                    <div class="d-flex justify-content-between">
                        <a href="@Url.Action("Details", "Events", new { eventName = ViewBag.EventName })" 
                           class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to Event
                        </a>
                        
                        <div class="btn-group" role="group">
                            <!-- You can add additional actions here if needed -->
                        </div>
                    </div>
                </div>
            </div>

            <!-- Reservations Summary -->
            @if (ViewBag.GiftItems != null && ((IEnumerable<MyGiftReg.Backend.Models.GiftItem>)ViewBag.GiftItems).Any())
            {
                var totalItems = ((IEnumerable<MyGiftReg.Backend.Models.GiftItem>)ViewBag.GiftItems).Count();
                var reservedItems = ((IEnumerable<MyGiftReg.Backend.Models.GiftItem>)ViewBag.GiftItems).Count(i => !string.IsNullOrEmpty(i.ReservedBy));
                var availableItems = totalItems - reservedItems;

                <div class="row mt-4">
                    <div class="col-12">
                        <div class="card bg-light">
                            <div class="card-body">
                                <h5 class="card-title">Reservation Summary</h5>
                                <div class="row text-center">
                                    <div class="col-md-4">
                                        <div class="p-2">
                                            <h4 class="text-primary">@totalItems</h4>
                                            <small class="text-muted">Total Items</small>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="p-2">
                                            <h4 class="text-success">@availableItems</h4>
                                            <small class="text-muted">Available</small>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="p-2">
                                            <h4 class="text-warning">@reservedItems</h4>
                                            <small class="text-muted">Reserved</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Add any JavaScript for dynamic interactions
            $('[data-bs-toggle="tooltip"]').tooltip();
            
            // Add hover effects for cards
            $('.card').hover(
                function() { $(this).addClass('shadow-lg'); },
                function() { $(this).removeClass('shadow-lg'); }
            );
        });
    </script>
}
