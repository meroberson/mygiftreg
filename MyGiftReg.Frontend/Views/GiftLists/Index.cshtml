@model IEnumerable<MyGiftReg.Backend.Models.GiftList>

@{
    ViewData["Title"] = "Gift Lists";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <!-- Breadcrumb -->
            <nav aria-label="breadcrumb" class="mb-4">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Events")">Events</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Details", "Events", new { eventName = ViewBag.EventName })">@ViewBag.EventName</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Gift Lists</li>
                </ol>
            </nav>

            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1><i class="fas fa-gift"></i> Gift Lists</h1>
                <a href="/Events/@ViewBag.EventName/GiftLists?view=create" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Create Gift List
                </a>
            </div>

            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger" role="alert">
                    <i class="fas fa-exclamation-triangle"></i> @ViewBag.ErrorMessage
                </div>
            }

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success" role="alert">
                    <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
                </div>
            }

            <!-- Gift Lists -->
            @if (Model != null && Model.Any())
            {
                <div class="row">
                    @foreach (var giftList in Model)
                    {
                        <div class="col-md-6 col-lg-4 mb-4">
                            <div class="card h-100 shadow">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <i class="fas fa-list"></i> @giftList.Name
                                    </h5>
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <small class="text-muted">
                                            <i class="fas fa-user"></i> @giftList.Owner
                                        </small>
                                    </div>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <small class="text-muted">
                                            <i class="fas fa-calendar"></i> Created
                                            @giftList.CreatedDate.ToString("MMM dd, yyyy")
                                        </small>
                                    </div>
                                </div>
                                <div class="card-footer">
                                    <div class="btn-group w-100" role="group">
                                        <a href="/Events/@ViewBag.EventName/GiftLists/@giftList.Id" 
                                           class="btn btn-outline-primary">
                                            <i class="fas fa-eye"></i> View
                                        </a>
                                        @if (giftList.Owner == "development-user")
                                        {
                                            <a href="/Events/@ViewBag.EventName/GiftLists?view=edit&id=@giftList.Id" 
                                               class="btn btn-outline-secondary">
                                                <i class="fas fa-edit"></i> Edit
                                            </a>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <!-- Empty State -->
                <div class="text-center py-5">
                    <i class="fas fa-gift fa-4x text-muted mb-3"></i>
                    <h4 class="text-muted">No Gift Lists Yet</h4>
                    <p class="text-muted">Create your first gift list to start managing items!</p>
                    <a href="/Events/@ViewBag.EventName/GiftLists?view=create" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Create Your First Gift List
                    </a>
                </div>
            }

            <!-- Back to Event -->
            <div class="row mt-4">
                <div class="col-12">
                    <a href="@Url.Action("Details", "Events", new { eventName = ViewBag.EventName })" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to Event
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Add hover effects for cards
            $('.card').hover(
                function() { $(this).addClass('shadow-lg'); },
                function() { $(this).removeClass('shadow-lg'); }
            );
        });
    </script>
}
