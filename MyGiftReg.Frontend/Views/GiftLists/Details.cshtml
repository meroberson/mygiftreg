@model MyGiftReg.Backend.Models.GiftList

@{
    ViewData["Title"] = $"Gift List: {Model.Name}";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <!-- Breadcrumb -->
            <nav aria-label="breadcrumb" class="mb-4">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Events")">Events</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Details", "Events", new { eventName = ViewBag.EventName })">@ViewBag.EventName</a></li>
                    <li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
                </ol>
            </nav>

            <!-- Gift List Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1 class="display-5">@Model.Name</h1>
                    <p class="lead text-muted">
                        <i class="fas fa-user"></i> Owned by @Model.OwnerDisplayName
                    </p>
                </div>
                <div>
                    @if (ViewBag.IsOwner != null && ViewBag.IsOwner)
                    {
                        <a href="/Events/@ViewBag.EventName/GiftLists?view=edit&id=@Model.Id" class="btn btn-outline-secondary">
                            <i class="fas fa-edit"></i> Edit Gift List
                        </a>
                    }
                </div>
            </div>

            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-triangle"></i> @ViewBag.ErrorMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <!-- Gift List Details -->
            <div class="row mb-4">
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title"><i class="fas fa-info-circle"></i> Gift List Details</h5>
                            <dl class="row">
                                <dt class="col-sm-4">Owner:</dt>
                                <dd class="col-sm-8">@Model.OwnerDisplayName</dd>
                                <dt class="col-sm-4">Created Date:</dt>
                                <dd class="col-sm-8">@Model.CreatedDate.ToString("MMMM dd, yyyy 'at' h:mm tt")</dd>
                            </dl>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title"><i class="fas fa-gift"></i> Gift Items Summary</h5>
                            <p class="card-text">
                                <strong>Total Items:</strong> @(((IEnumerable<MyGiftReg.Backend.Models.GiftItem>)ViewBag.GiftItems)?.Count() ?? 0)
                                <!-- Only show reservation counts to non-owners -->
                                @if (ViewBag.IsOwner != null && !ViewBag.IsOwner)
                                {
                                    <br><strong>Reserved:</strong> @(((IEnumerable<MyGiftReg.Backend.Models.GiftItem>)ViewBag.GiftItems)?.Count(i => !string.IsNullOrEmpty(i.ReservedBy)) ?? 0)
                                    <br><strong>Available:</strong> @(((IEnumerable<MyGiftReg.Backend.Models.GiftItem>)ViewBag.GiftItems)?.Count(i => string.IsNullOrEmpty(i.ReservedBy)) ?? 0)
                                }
                            </p>
                            @if (ViewBag.IsOwner != null && ViewBag.IsOwner)
                            {
                                <a href="@Url.Action("Index", "GiftItems", new { eventName = ViewBag.EventName, giftListId = Model.Id, view = "create" })" class="btn btn-primary">
                                    <i class="fas fa-plus"></i> Add Gift Items
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <!-- Gift Items -->
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-list"></i> Gift Items
                    </h3>
                    @if (ViewBag.IsOwner != null && ViewBag.IsOwner)
                    {
                        <a href="@Url.Action("Index", "GiftItems", new { eventName = ViewBag.EventName, giftListId = Model.Id, view = "create" })" class="btn btn-success btn-sm">
                            <i class="fas fa-plus"></i> Add Item
                        </a>
                    }
                </div>
                <div class="card-body">
                    @if (ViewBag.GiftItems != null && ((IEnumerable<MyGiftReg.Backend.Models.GiftItem>)ViewBag.GiftItems).Any())
                    {
                        <div class="row">
                            @foreach (var item in (IEnumerable<MyGiftReg.Backend.Models.GiftItem>)ViewBag.GiftItems)
                            {
                                <div class="col-md-6 col-lg-4 mb-3">
                                    <div class="card h-100">
                                        <div class="card-body">
                                            <h6 class="card-title">@item.Name</h6>
                                            
                                            @if (!string.IsNullOrEmpty(item.Description))
                                            {
                                                <p class="card-text text-muted small">@item.Description</p>
                                            }
                                            
                                            @if (!string.IsNullOrEmpty(item.Url))
                                            {
                                                <div class="mb-2">
                                                    <a href="@item.Url" target="_blank" class="btn btn-outline-info btn-sm">
                                                        <i class="fas fa-external-link-alt"></i> View Item
                                                    </a>
                                                </div>
                                            }
                                            
                                            <!-- Only show reservation status to non-owners -->
                                            @if (ViewBag.IsOwner != null && !ViewBag.IsOwner)
                                            {
                                                @if (!string.IsNullOrEmpty(item.ReservedBy))
                                                {
                                                    <div class="alert alert-warning mb-2">
                                                        <small>
                                                            @if (item.ReservedBy == ViewBag.CurrentUserId)
                                                            {
                                                                <span><i class="fas fa-check-circle"></i> Reserved by you!</span>
                                                            }
                                                            else
                                                            {
                                                                <span><i class="fas fa-lock"></i> Reserved by @item.ReservedByDisplayName</span>
                                                            }
                                                        </small>
                                                    </div>
                                                }
                                                else
                                                {
                                                    <div class="alert alert-success mb-2">
                                                        <small>
                                                            <i class="fas fa-check-circle"></i> Available
                                                        </small>
                                                    </div>
                                                }
                                            }
                                        </div>
                                        <div class="card-footer">
                                            <div class="btn-group w-100" role="group">
                                                @if (ViewBag.IsOwner != null && ViewBag.IsOwner)
                                                {
                                                    <a href="@Url.Action("Index", "GiftItems", new { 
                                                        eventName = ViewBag.EventName,
                                                        giftListId = Model.Id, 
                                                        view = "edit", 
                                                        id = item.Id 
                                                    })" 
                                                       class="btn btn-outline-secondary btn-sm">
                                                        <i class="fas fa-edit"></i> Edit
                                                    </a>
                                                }
                                                else if (ViewBag.IsOwner != null && !ViewBag.IsOwner && string.IsNullOrEmpty(item.ReservedBy))
                                                {
                                                    <form method="post" 
                                                          action="@Url.Action("Index", "GiftItems", new { 
                                                              eventName = ViewBag.EventName, 
                                                              giftListId = Model.Id,
                                                              id = @item.Id
                                                          })" 
                                                          style="display: inline;">
                                                        <input type="hidden" name="action" value="reserve" />
                                                        @Html.AntiForgeryToken()
                                                        <button type="submit" class="btn btn-success btn-sm w-100">
                                                            <i class="fas fa-heart"></i> Reserve
                                                        </button>
                                                    </form>
                                                }
                                                else if (ViewBag.IsOwner != null && !ViewBag.IsOwner && !string.IsNullOrEmpty(item.ReservedBy) && item.ReservedBy == ViewBag.CurrentUserId)
                                                {
                                                    <form method="post" 
                                                          action="@Url.Action("Index", "GiftItems", new { 
                                                              eventName = ViewBag.EventName, 
                                                              giftListId = Model.Id,
                                                              id = @item.Id
                                                          })" 
                                                          style="display: inline;">
                                                        <input type="hidden" name="action" value="unreserve" />
                                                        @Html.AntiForgeryToken()
                                                        <button type="submit" class="btn btn-warning btn-sm w-100">
                                                            <i class="fas fa-heart-broken"></i> Unreserve
                                                        </button>
                                                    </form>
                                                }
                                                else if (ViewBag.IsOwner != null && !ViewBag.IsOwner && !string.IsNullOrEmpty(item.ReservedBy) && item.ReservedBy != ViewBag.CurrentUserId)
                                                {
                                                    <button class="btn btn-outline-secondary btn-sm w-100" disabled>
                                                        <i class="fas fa-lock"></i> Reserved
                                                    </button>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center text-muted py-4">
                            <i class="fas fa-gift fa-3x mb-3"></i>
                            <p>No gift items added yet.</p>
                            @if (ViewBag.IsOwner != null && ViewBag.IsOwner)
                            {
                                <a href="@Url.Action("Index", "GiftItems", new { eventName = ViewBag.EventName, giftListId = Model.Id, view = "create" })" class="btn btn-success">
                                    <i class="fas fa-plus"></i> Add Your First Item
                                </a>
                            }
                        </div>
                    }
                </div>
            </div>

            <!-- Navigation Buttons -->
            <div class="row mt-4">
                <div class="col-12">
                    <a href="@Url.Action("Details", "Events", new { eventName = ViewBag.EventName })" class="btn btn-outline-primary">
                        <i class="fas fa-arrow-left"></i> Back to Event
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Add hover effects for cards
            $('.card').hover(
                function() { $(this).addClass('shadow-lg'); }, 
                function() { $(this).removeClass('shadow-lg'); }
            );
        });
    </script>
}
