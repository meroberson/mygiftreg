@model MyGiftReg.Backend.Models.Event

@{
    ViewData["Title"] = $"Event: {Model.Name}";
    var myGiftLists = ViewBag.MyGiftLists as List<MyGiftReg.Backend.Models.GiftList> ?? new List<MyGiftReg.Backend.Models.GiftList>();
    var othersGiftLists = ViewBag.OthersGiftLists as List<MyGiftReg.Backend.Models.GiftList> ?? new List<MyGiftReg.Backend.Models.GiftList>();
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <!-- Breadcrumb -->
            <nav aria-label="breadcrumb" class="mb-4">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Events")">Events</a></li>
                    <li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
                </ol>
            </nav>

            <!-- Event Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1 class="display-5">@Model.Name</h1>
                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <p class="lead text-muted">@Model.Description</p>
                    }
                </div>
                <div>
                    <a href="@Url.Action("Index", "Events", new { view = "edit", id = Model.Name })" class="btn btn-outline-secondary me-2">
                        <i class="fas fa-edit"></i> Edit Event
                    </a>
                    <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteEventModal">
                        <i class="fas fa-trash"></i> Delete Event
                    </button>
                </div>
            </div>

            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-triangle"></i>
                    @ViewBag.ErrorMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <!-- Event Details -->
            <div class="row mb-4">
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title"><i class="fas fa-info-circle"></i> Event Details</h5>
                            <dl class="row">
                                <dt class="col-sm-4">Created By:</dt>
                                <dd class="col-sm-8">@Model.CreatedBy</dd>
                                <dt class="col-sm-4">Created Date:</dt>
                                <dd class="col-sm-8">@Model.CreatedDate.ToString("MMMM dd, yyyy 'at' h:mm tt")</dd>
                                @if (Model.EventDate.HasValue)
                                {
                                    <dt class="col-sm-4">Event Date:</dt>
                                    <dd class="col-sm-8">@Model.EventDate.Value.ToString("MMMM dd, yyyy")</dd>
                                }
                            </dl>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title"><i class="fas fa-gift"></i> Gift Lists Summary</h5>
                            <p class="card-text">
                                <strong>Your Lists:</strong> @myGiftLists.Count<br>
                                <strong>Others' Lists:</strong> @othersGiftLists.Count<br>
                                <strong>Total Lists:</strong> @(myGiftLists.Count + othersGiftLists.Count)
                            </p>
                            <a href="@Url.Action("Create", "GiftLists", new { eventName = Model.Name })" class="btn btn-primary">
                                <i class="fas fa-plus"></i> Create New Gift List
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- My Gift Lists Section -->
            @if (myGiftLists.Any())
            {
                <div class="mb-5">
                    <h3><i class="fas fa-heart text-primary"></i> Your Gift Lists</h3>
                    <div class="row">
                        @foreach (var giftList in myGiftLists)
                        {
                            <div class="col-md-6 col-lg-4 mb-4">
                                <div class="card h-100 border-primary">
                                    <div class="card-header bg-primary text-white">
                                        <h5 class="card-title mb-0">@giftList.Name</h5>
                                        <small>Owned by you</small>
                                    </div>
                                    <div class="card-body">
                                        <p class="card-text">
                                            <small class="text-muted">
                                                Created on @giftList.CreatedDate.ToString("MMM dd, yyyy")
                                            </small>
                                        </p>
                                        <p class="card-text">
                                            <strong>Gift Items:</strong> <span id="item-count-@giftList.Id">Loading...</span>
                                        </p>
                                    </div>
                                    <div class="card-footer bg-transparent">
                                        <div class="btn-group w-100" role="group">
                                            <a href="@Url.Action("Edit", "GiftLists", new { eventName = Model.Name, giftListId = giftList.Id })" 
                                               class="btn btn-primary">
                                                <i class="fas fa-edit"></i> Edit
                                            </a>
                                            <a href="@Url.Action("Index", "GiftItems", new { eventName = Model.Name, giftListId = giftList.Id })" 
                                               class="btn btn-outline-primary">
                                                <i class="fas fa-list"></i> Items
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }

            <!-- Others' Gift Lists Section -->
            @if (othersGiftLists.Any())
            {
                <div class="mb-5">
                    <h3><i class="fas fa-users text-success"></i> Others' Gift Lists</h3>
                    <div class="row">
                        @foreach (var giftList in othersGiftLists)
                        {
                            <div class="col-md-6 col-lg-4 mb-4">
                                <div class="card h-100 border-success">
                                    <div class="card-header bg-success text-white">
                                        <h5 class="card-title mb-0">@giftList.Name</h5>
                                        <small>Owned by @giftList.Owner</small>
                                    </div>
                                    <div class="card-body">
                                        <p class="card-text">
                                            <small class="text-muted">
                                                Created on @giftList.CreatedDate.ToString("MMM dd, yyyy")
                                            </small>
                                        </p>
                                        <p class="card-text">
                                            <strong>Gift Items:</strong> <span id="item-count-@giftList.Id">Loading...</span>
                                        </p>
                                    </div>
                                    <div class="card-footer bg-transparent">
                                        <div class="btn-group w-100" role="group">
                                            <a href="@Url.Action("Reserve", "GiftLists", new { eventName = Model.Name, giftListId = giftList.Id })" 
                                               class="btn btn-success">
                                                <i class="fas fa-heart"></i> Reserve
                                            </a>
                                            <a href="@Url.Action("Index", "GiftItems", new { eventName = Model.Name, giftListId = giftList.Id })" 
                                               class="btn btn-outline-success">
                                                <i class="fas fa-eye"></i> View Items
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }

            @if (!myGiftLists.Any() && !othersGiftLists.Any())
            {
                <div class="text-center py-5">
                    <div class="mb-4">
                        <i class="fas fa-gift text-muted" style="font-size: 4rem;"></i>
                    </div>
                    <h3 class="text-muted">No Gift Lists Yet</h3>
                    <p class="text-muted">Be the first to create a gift list for this event!</p>
                    <a href="@Url.Action("Create", "GiftLists", new { eventName = Model.Name })" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Create Your Gift List
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<!-- Delete Event Modal -->
<div class="modal fade" id="deleteEventModal" tabindex="-1" aria-labelledby="deleteEventModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteEventModalLabel">Delete Event</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete the event "<strong>@Model.Name</strong>"?</p>
                <p class="text-danger"><strong>Warning:</strong> This will also delete all associated gift lists and items. This action cannot be undone.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form method="post" action="@Url.Action("Index", new { action = "delete", id = Model.Name })" class="d-inline">
                    <input type="hidden" name="__RequestVerificationToken" value="@Html.AntiForgeryToken()" />
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Delete Event
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Load item counts for each gift list
            loadGiftListItemCounts();
        });

        function loadGiftListItemCounts() {
            // This would be implemented to load item counts via AJAX
            // For now, we'll just show placeholder text
            $('.card').each(function() {
                var countSpan = $(this).find('[id^="item-count-"]');
                if (countSpan.length) {
                    countSpan.text('Items will be loaded here');
                }
            });
        }
    </script>
}
