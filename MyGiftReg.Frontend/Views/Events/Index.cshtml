@model IEnumerable<MyGiftReg.Backend.Models.Event>

@{
    ViewData["Title"] = "Events";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1><i class="fas fa-calendar-alt"></i> Events</h1>
                <a href="@Url.Action("Index", "Events", new { view = "create" })" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Create Event
                </a>
            </div>

            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger" role="alert">
                    <i class="fas fa-exclamation-triangle"></i> @ViewBag.ErrorMessage
                </div>
            }

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success" role="alert">
                    <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
                </div>
            }

            <!-- Events List -->
            @if (Model != null && Model.Any())
            {
                <div class="row">
                    @foreach (var eventEntity in Model)
                    {
                        <div class="col-md-6 col-lg-4 mb-4">
                            <div class="card h-100 shadow">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <i class="fas fa-calendar"></i> @eventEntity.Name
                                    </h5>
                                    <p class="card-text text-muted">
                                        @if (!string.IsNullOrEmpty(eventEntity.Description))
                                        {
                                            @eventEntity.Description
                                        }
                                        else
                                        {
                                            <em>No description provided</em>
                                        }
                                    </p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <small class="text-muted">
                                            <i class="fas fa-calendar-day"></i>
                                            @if (eventEntity.EventDate.HasValue)
                                            {
                                                @eventEntity.EventDate.Value.ToString("MMM dd, yyyy")
                                            }
                                            else
                                            {
                                                <em>No date set</em>
                                            }
                                        </small>
                                    </div>
                                </div>
                                <div class="card-footer">
                                    <div class="d-grid">
                                        <a href="/Events/@eventEntity.Name" 
                                           class="btn btn-outline-primary">
                                            <i class="fas fa-eye"></i> View Details
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <!-- Empty State -->
                <div class="text-center py-5">
                    <i class="fas fa-calendar-times fa-4x text-muted mb-3"></i>
                    <h4 class="text-muted">No Events Yet</h4>
                    <p class="text-muted">Create your first event to start managing gift lists!</p>
                    <a href="@Url.Action("Index", "Events", new { view = "create" })" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Create Your First Event
                    </a>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Add hover effects for cards
            $('.card').hover(
                function() { $(this).addClass('shadow-lg'); },
                function() { $(this).removeClass('shadow-lg'); }
            );
        });
    </script>
}
