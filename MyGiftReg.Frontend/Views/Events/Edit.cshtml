@model MyGiftReg.Backend.Models.DTOs.CreateEventRequest

@{
    ViewData["Title"] = "Edit Event";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <!-- Breadcrumb -->
            <nav aria-label="breadcrumb" class="mb-4">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Events")">Events</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Edit</li>
                </ol>
            </nav>

            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-6">
                    <div class="card shadow">
                        <div class="card-header">
                            <h3 class="card-title mb-0">
                                <i class="fas fa-edit"></i> Edit Event
                            </h3>
                        </div>
                        <div class="card-body">
                            <form method="post" asp-controller="Events" asp-action="Index">
                                <input type="hidden" name="action" value="edit" />
                                <input type="hidden" name="id" value="@Model.Name" />
                                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                                
                                <div class="mb-3">
                                    <label asp-for="Name" class="form-label"></label>
                                    <input asp-for="Name" class="form-control" readonly />
                                    <small class="text-muted">Event name cannot be changed after creation.</small>
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Description" class="form-label"></label>
                                    <textarea asp-for="Description" class="form-control" rows="3" 
                                              placeholder="Describe the event (optional)"></textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="EventDate" class="form-label"></label>
                                    <input asp-for="EventDate" type="date" class="form-control" />
                                    <span asp-validation-for="EventDate" class="text-danger"></span>
                                </div>

                                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                    <a href="@Url.Action("Details", new { eventName = Model.Name })" class="btn btn-secondary me-md-2">
                                        <i class="fas fa-arrow-left"></i> Cancel
                                    </a>
                                    @if (ViewBag.IsAdmin)
                                    {
                                        <button type="button" class="btn btn-outline-danger me-md-2" data-bs-toggle="modal" data-bs-target="#deleteEventModal">
                                            <i class="fas fa-trash"></i> Delete Event
                                        </button>
                                    }
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-save"></i> Save Changes
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Event Modal -->
<div class="modal fade" id="deleteEventModal" tabindex="-1" aria-labelledby="deleteEventModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteEventModalLabel">Delete Event</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete the event "<strong>@Model.Name</strong>"?</p>
                <p class="text-danger"><strong>Warning:</strong> This will also delete all associated gift lists and items. This action cannot be undone.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form method="post" asp-controller="Events" asp-action="Delete" asp-route-eventName="@Model.Name" class="d-inline">
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Delete Event
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
