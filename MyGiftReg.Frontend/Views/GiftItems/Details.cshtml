@model MyGiftReg.Backend.Models.GiftItem

@{
    ViewData["Title"] = "Gift Item Details";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <!-- Breadcrumb -->
            <nav aria-label="breadcrumb" class="mb-4">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Events")">Events</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Details", "Events", new { eventName = ViewBag.EventName })">@ViewBag.EventName</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Details", "GiftLists", new { eventName = ViewBag.EventName, giftListId = ViewBag.GiftListId })">@ViewBag.GiftListName</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "GiftItems", new { eventName = ViewBag.EventName, giftListId = ViewBag.GiftListId })">Gift Items</a></li>
                    <li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
                </ol>
            </nav>

            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger" role="alert">
                    <i class="fas fa-exclamation-triangle"></i> @ViewBag.ErrorMessage
                </div>
            }

            <div class="row justify-content-center">
                <div class="col-md-8">
                    <div class="card shadow">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h3 class="card-title mb-0">
                                <i class="fas fa-gift"></i> @Model.Name
                            </h3>
                            @if (ViewBag.IsOwner)
                            {
                                <a href="@Url.Action("Index", "GiftItems", new { eventName = ViewBag.EventName, giftListId = ViewBag.GiftListId, view = "edit", id = ViewBag.GiftItemId })" 
                                   class="btn btn-primary btn-sm">
                                    <i class="fas fa-edit"></i> Edit Item
                                </a>
                            }
                        </div>
                        <div class="card-body">
                            <!-- Gift Item Details -->
                            <div class="mb-4">
                                <h5>Description</h5>
                                @if (!string.IsNullOrEmpty(Model.Description))
                                {
                                    <p class="text-muted">@Model.Description</p>
                                }
                                else
                                {
                                    <p class="text-muted">No description provided.</p>
                                }
                            </div>

                            @if (!string.IsNullOrEmpty(Model.Url))
                            {
                                <div class="mb-4">
                                    <h5>Item Link</h5>
                                    <a href="@Model.Url" target="_blank" class="btn btn-outline-primary">
                                        <i class="fas fa-external-link-alt"></i> View Item
                                    </a>
                                </div>
                            }

                            <!-- Only show reservation information to non-owners -->
                            @if (!ViewBag.IsOwner)
                            {
                                <div class="mb-4">
                                    <h5>Reservation Status</h5>
                                    @if (Model.IsReserved)
                                    {
                                        @if (Model.ReservedBy == ViewBag.CurrentUserId)
                                        {
                                            <div class="alert alert-success">
                                                <i class="fas fa-check-circle"></i>
                                                <strong>This item is reserved by you!</strong>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="alert alert-warning">
                                                <i class="fas fa-info-circle"></i>
                                                <strong>This item is already reserved.</strong>
                                            </div>
                                        }
                                    }
                                    else
                                    {
                                        <div class="alert alert-info">
                                            <i class="fas fa-info-circle"></i>
                                            <strong>This item is available for reservation.</strong>
                                        </div>
                                    }
                                </div>
                            }
                        </div>
                        
                        <div class="card-footer">
                            <div class="d-flex justify-content-between">
                                <a href="@Url.Action("Index", "GiftItems", new { eventName = ViewBag.EventName, giftListId = ViewBag.GiftListId })" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left"></i> Back to Gift Items
                                </a>
                                
                                @if (!ViewBag.IsOwner)
                                {
                                    <div class="btn-group" role="group">
                                        @if (Model.IsReserved && Model.ReservedBy == ViewBag.CurrentUserId)
                                        {
                                            <a href="@Url.Action("Index", "GiftItems", new { 
                                                eventName = ViewBag.EventName, 
                                                giftListId = ViewBag.GiftListId, 
                                                view = "reserve", 
                                                id = ViewBag.GiftItemId 
                                            })" 
                                               class="btn btn-warning">
                                                <i class="fas fa-bookmark-open"></i> Unreserve Item
                                            </a>
                                        }
                                        else if (!Model.IsReserved)
                                        {
                                            <a href="@Url.Action("Index", "GiftItems", new { 
                                                eventName = ViewBag.EventName, 
                                                giftListId = ViewBag.GiftListId, 
                                                view = "reserve", 
                                                id = ViewBag.GiftItemId 
                                            })" 
                                               class="btn btn-success">
                                                <i class="fas fa-bookmark"></i> Reserve Item
                                            </a>
                                        }
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Add any JavaScript for dynamic interactions
            $('[data-bs-toggle="tooltip"]').tooltip();
        });
    </script>
}
