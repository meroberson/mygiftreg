@model IEnumerable<MyGiftReg.Backend.Models.GiftItem>

@{
    ViewData["Title"] = "Gift Items";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <!-- Breadcrumb -->
            <nav aria-label="breadcrumb" class="mb-4">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Events")">Events</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Details", "Events", new { eventName = ViewBag.EventName })">@ViewBag.EventName</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Details", "GiftLists", new { eventName = ViewBag.EventName, giftListId = ViewBag.GiftListId })">@ViewBag.GiftListName</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Gift Items</li>
                </ol>
            </nav>

            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger" role="alert">
                    <i class="fas fa-exclamation-triangle"></i> @ViewBag.ErrorMessage
                </div>
            }

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success" role="alert">
                    <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
                </div>
            }

            <div class="row">
                <div class="col-12">
                    <div class="card shadow">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h3 class="card-title mb-0">
                                <i class="fas fa-gift"></i> Gift Items - @ViewBag.GiftListName
                            </h3>
                            @if (ViewBag.IsOwner)
                            {
                                <a href="@Url.Action("Index", "GiftItems", new { eventName = ViewBag.EventName, giftListId = ViewBag.GiftListId, view = "create" })" 
                                   class="btn btn-success btn-sm">
                                    <i class="fas fa-plus"></i> Add Item
                                </a>
                            }
                        </div>
                        <div class="card-body">
                            @if (Model != null && Model.Any())
                            {
                                <div class="row">
                                    @foreach (var item in Model)
                                    {
                                        <div class="col-md-6 col-lg-4 mb-3">
                                            <div class="card h-100">
                                                <div class="card-body d-flex flex-column">
                                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                                        <h6 class="card-title mb-0">@item.Name</h6>
                                                        <!-- Only show availability badges to non-owners -->
                                                        @if (!ViewBag.IsOwner)
                                                        {
                                                            @if (item.IsReserved)
                                                            {
                                                                <span class="badge bg-warning text-dark">
                                                                    <i class="fas fa-bookmark"></i> Reserved
                                                                </span>
                                                            }
                                                            else
                                                            {
                                                                <span class="badge bg-success">
                                                                    <i class="fas fa-check"></i> Available
                                                                </span>
                                                            }
                                                        }
                                                    </div>
                                                    
                                                    @if (!string.IsNullOrEmpty(item.Description))
                                                    {
                                                        <p class="card-text text-muted small flex-grow-1">@item.Description</p>
                                                    }
                                                    else
                                                    {
                                                        <div class="flex-grow-1"></div>
                                                    }
                                                    
                                                    @if (!string.IsNullOrEmpty(item.Url))
                                                    {
                                                        <p class="mb-2">
                                                            <a href="@item.Url" target="_blank" class="btn btn-outline-primary btn-sm">
                                                                <i class="fas fa-external-link-alt"></i> View
                                                            </a>
                                                        </p>
                                                    }
                                                    
                                                    <div class="mt-auto">
                                                        <!-- Only show reservation status to non-owners -->
                                                        @if (!ViewBag.IsOwner)
                                                        {
                                                            @if (item.IsReserved)
                                                            {
                                                                @if (item.ReservedBy == ViewBag.CurrentUserId)
                                                                {
                                                                    <div class="alert alert-success py-1 px-2 mb-2">
                                                                        <small><i class="fas fa-check"></i> Reserved by you</small>
                                                                    </div>
                                                                }
                                                                else
                                                                {
                                                                    <div class="alert alert-warning py-1 px-2 mb-2">
                                                                        <small><i class="fas fa-user"></i> Reserved by @item.ReservedBy</small>
                                                                    </div>
                                                                }
                                                            }
                                                            else
                                                            {
                                                                <div class="alert alert-info py-1 px-2 mb-2">
                                                                    <small><i class="fas fa-info-circle"></i> Available to reserve</small>
                                                                </div>
                                                            }
                                                        }
                                                        
                                                        <!-- Action Buttons -->
                                                        <div class="btn-group w-100" role="group">
                                                            <a href="@Url.Action("Details", "GiftItems", new { 
                                                                eventName = ViewBag.EventName, 
                                                                giftListId = ViewBag.GiftListId, 
                                                                itemId = item.Id 
                                                            })" 
                                                               class="btn btn-outline-primary btn-sm">
                                                                <i class="fas fa-eye"></i> View
                                                            </a>
                                                            
                                                            @if (ViewBag.IsOwner)
                                                            {
                                                                <a href="@Url.Action("Index", "GiftItems", new { 
                                                                    eventName = ViewBag.EventName, 
                                                                    giftListId = ViewBag.GiftListId, 
                                                                    view = "edit", 
                                                                    id = item.Id 
                                                                })" 
                                                                   class="btn btn-outline-secondary btn-sm">
                                                                    <i class="fas fa-edit"></i> Edit
                                                                </a>
                                                            }
                                                            else
                                                            {
                                                                @if (item.IsReserved && item.ReservedBy == ViewBag.CurrentUserId)
                                                                {
                                                                    <a href="@Url.Action("Index", "GiftItems", new { 
                                                                        eventName = ViewBag.EventName, 
                                                                        giftListId = ViewBag.GiftListId, 
                                                                        view = "reserve", 
                                                                        id = item.Id 
                                                                    })" 
                                                                       class="btn btn-warning btn-sm">
                                                                        <i class="fas fa-bookmark-open"></i> Unreserve
                                                                    </a>
                                                                }
                                                                else if (!item.IsReserved)
                                                                {
                                                                    <a href="@Url.Action("Index", "GiftItems", new { 
                                                                        eventName = ViewBag.EventName, 
                                                                        giftListId = ViewBag.GiftListId, 
                                                                        view = "reserve", 
                                                                        id = item.Id 
                                                                    })" 
                                                                       class="btn btn-success btn-sm">
                                                                        <i class="fas fa-bookmark"></i> Reserve
                                                                    </a>
                                                                }
                                                            }
                                                        </div>
                                                    </div>
                                                    
                                                    <div class="mt-2">
                                                        <small class="text-muted">
                                                            <i class="fas fa-calendar"></i> Added @item.CreatedDate.ToString("MMM dd")
                                                        </small>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                            else
                            {
                                <div class="text-center text-muted py-5">
                                    <i class="fas fa-gift fa-4x mb-3"></i>
                                    <h4>No gift items yet</h4>
                                    <p class="mb-4">This gift list doesn't have any items yet.</p>
                                    @if (ViewBag.IsOwner)
                                    {
                                        <a href="@Url.Action("Index", "GiftItems", new { eventName = ViewBag.EventName, giftListId = ViewBag.GiftListId, view = "create" })" 
                                           class="btn btn-success">
                                            <i class="fas fa-plus"></i> Add Your First Item
                                        </a>
                                    }
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Back to Gift List -->
            <div class="row mt-3">
                <div class="col-12">
                    <a href="@Url.Action("Details", "GiftLists", new { eventName = ViewBag.EventName, giftListId = ViewBag.GiftListId })" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to Gift List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Initialize tooltips if needed
            $('[data-bs-toggle="tooltip"]').tooltip();
            
            // Auto-refresh reservation status every 30 seconds (optional)
            // setInterval(function() {
            //     location.reload();
            // }, 30000);
        });
    </script>
}
