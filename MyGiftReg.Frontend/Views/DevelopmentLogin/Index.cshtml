@{
    ViewData["Title"] = "Development Login";
    var currentUser = ViewBag.CurrentUser as MyGiftReg.Frontend.Models.DevelopmentUser;
    var allUsers = ViewBag.AllUsers as IEnumerable<MyGiftReg.Frontend.Models.DevelopmentUser>;
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3>Development User Login</h3>
                </div>
                <div class="card-body">
                    
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <div class="mb-4">
                        <h5>Current User</h5>
                        @if (currentUser != null)
                        {
                            <div class="card bg-light">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-8">
                                            <h6 class="card-title">@currentUser.DisplayName</h6>
                                            <p class="card-text">
                                                <small class="text-muted">
                                                    <strong>Email:</strong> @currentUser.Email<br>
                                                    <strong>User ID:</strong> @currentUser.Id
                                                </small>
                                            </p>
                                        </div>
                                        <div class="col-md-4 text-end">
                                            <span class="badge bg-success">Active</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                    <div class="mb-4">
                        <h5>Switch to Another User</h5>
                        <form asp-action="Switch" method="post" class="mb-3">
                            <div class="row">
                                <div class="col-md-8">
                                    <select name="userId" class="form-select" required>
                                        <option value="">-- Select a user --</option>
                                        @foreach (var user in allUsers)
                                        {
                                            <option value="@user.Id">@user.DisplayName (@user.Email)</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-md-4">
                                    <button type="submit" class="btn btn-primary w-100">
                                        Switch User
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>

                    <div class="mb-4">
                        <h5>Available Development Users</h5>
                        <div class="row">
                            @foreach (var user in allUsers)
                            {
                                var isCurrentUser = currentUser?.Id == user.Id;
                                <div class="col-md-6 mb-3">
                                    <div class="card @(isCurrentUser ? "border-success" : "")">
                                        <div class="card-body">
                                            <h6 class="card-title">
                                                @user.DisplayName
                                                @if (isCurrentUser)
                                                {
                                                    <span class="badge bg-success float-end">Current</span>
                                                }
                                            </h6>
                                            <p class="card-text">
                                                <small class="text-muted">@user.Email</small>
                                            </p>
                                            @if (!isCurrentUser)
                                            {
                                                <form asp-action="Switch" method="post" class="mt-2">
                                                    <input type="hidden" name="userId" value="@user.Id" />
                                                    <button type="submit" class="btn btn-outline-primary btn-sm">
                                                        Switch to @user.DisplayName.Split(' ')[0]
                                                    </button>
                                                </form>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>

                    <div class="mb-4">
                        <h5>Session Management</h5>
                        <form asp-action="Logout" method="post" class="d-inline">
                            <button type="submit" class="btn btn-warning" onclick="return confirm('Are you sure you want to clear the session? This will reset to the default user.')">
                                Clear Session
                            </button>
                        </form>
                        <div class="mt-2">
                            <small class="text-muted">
                                Clearing the session will reset to the default user (first active user or first user in the list).
                            </small>
                        </div>
                    </div>

                    <div class="alert alert-info">
                        <h6>Development Mode Information</h6>
                        <p class="mb-0">
                            This is a development-only feature for testing multi-user scenarios. 
                            In production, users will be authenticated through Entra (Azure AD).
                        </p>
                    </div>

                    <div class="text-center">
                        <a asp-controller="Events" asp-action="Index" class="btn btn-success">
                            Continue to Application
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-dismiss alerts after 5 seconds
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);

        // Show loading state for form submissions
        $('form').on('submit', function() {
            var form = $(this);
            var submitBtn = form.find('button[type="submit"]');
            submitBtn.prop('disabled', true);
            submitBtn.html('Processing...');
        });
    </script>
}
