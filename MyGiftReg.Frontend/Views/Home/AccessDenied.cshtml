@{
    ViewData["Title"] = "Access Denied";
}

<div class="text-center">
    <h1 class="display-4">Access Denied</h1>
    <p class="lead">You do not have permission to access this resource.</p>
    <p>Please contact the administrator if you believe this is an error.</p>
    <div class="mt-4">
        <a href="@Url.Action("Index", "Events")" class="btn btn-primary">Return to Home</a>
        <a href="@Url.Action("SignOut", "Account", new { area = "MicrosoftIdentity" })" class="btn btn-secondary">Sign Out</a>
    </div>
</div>
